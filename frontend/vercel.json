{
  "installCommand": "yarn install",
  "buildCommand": "yarn build",
  "functions": {
    "api/share.js": {
      "runtime": "@vercel/edge"
    }
  },
  "rewrites": [
    {
      "source": "/content/:path*",
      "destination": "https://the-state-of-play.ghost.io/content/:path*"
    },
    {
      "source": "/s/:slug",
      "destination": "/api/share?slug=:slug"
    },
    {
      "source": "/((?!content|api|static|_next|favicon|manifest|robots|s).*)",
      "destination": "/index.html"
    }
  ]
}
